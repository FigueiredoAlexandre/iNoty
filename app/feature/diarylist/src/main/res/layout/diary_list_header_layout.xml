<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_inoty_dark_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dayNumber"
        style="@style/iNotyBodyWhiteLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/inoty_dimen_12"
        android:layout_marginTop="@dimen/inoty_dimen_16"
        android:layout_marginStart="@dimen/inoty_dimen_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="25" />

    <TextView
        android:id="@+id/dayWeekName"
        style="@style/iNotyLabelLightGreySmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/inoty_dimen_4"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/dayNumber"
        app:layout_constraintStart_toStartOf="@id/dayNumber"
        app:layout_constraintTop_toBottomOf="@id/dayNumber"
        tools:text="SÃ¡bado" />

    <TextView
        android:id="@+id/monthName"
        style="@style/iNotyBodyWhiteLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/inoty_dimen_14"
        app:layout_constraintBottom_toBottomOf="@+id/dayNumber"
        app:layout_constraintStart_toEndOf="@id/dayNumber"
        app:layout_constraintTop_toTopOf="@id/dayNumber"
        tools:text="Janeiro" />

    <TextView
        android:id="@+id/yearNumber"
        style="@style/iNotyLabelMediumGreySmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/inoty_dimen_4"
        app:layout_constraintEnd_toEndOf="@+id/monthName"
        app:layout_constraintStart_toStartOf="@+id/monthName"
        app:layout_constraintTop_toBottomOf="@+id/monthName"
        tools:text="2023" />

</androidx.constraintlayout.widget.ConstraintLayout>