<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="iNotyLabelDark">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_inoty_greyscale_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="iNotyBodyWhiteLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/color_inoty_white</item>
    </style>

    <style name="iNotyBodyWhite">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_inoty_white</item>
    </style>

    <style name="iNotyBodyWhiteSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_inoty_white</item>
    </style>

    <style name="iNotyLabelWhite">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_inoty_white</item>
    </style>

    <style name="iNotyLabelWhiteSmall">
        <item name="android:textColor">@color/color_inoty_white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="iNotyLabelLightGreySmall">
        <item name="android:textColor">@color/color_inoty_light_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="iNotyLabelMediumGreySmall">
        <item name="android:textColor">@color/color_inoty_medium_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="iNotyImageCount">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/color_inoty_white</item>
    </style>

    <style name="iNotyButtonPrimary">
        <item name="btnTextColor">@color/color_inoty_white</item>
        <item name="btnBackground">@drawable/inoty_button_background</item>
    </style>

    <style name="iNotyProgressDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">72%</item>
        <item name="android:windowMinWidthMinor">72%</item>
